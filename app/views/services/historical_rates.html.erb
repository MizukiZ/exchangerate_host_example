<%= render layout: "layouts/service_card" do %>
  <%= render "services/search_filter", fields: [:date, :base, :currencies, :amount]  %>

  <% if @historical_rates%>
    <h4 class="mt-3"><%= "Rates on #{@historical_rates['date']}:" %></h4>
    <ul class="list-group list-group-flush">
      <% @historical_rates['rates'].each do |currency, rate| %>
        <li class="list-group-item"><%= "#{currency}: #{rate}"%></li>
      <% end %>
    </ul>
  <% end %>
<% end %>