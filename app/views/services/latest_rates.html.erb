<%= render "layouts/service_card" do %>
  <%= render "services/search_filter", fields: [
    {type: :currency, sub_type: :base},
    {type: :currencies},
    {type: :amount}
    ]  %>

  <% if @latest_rates%>
    <h4 class="mt-3"><%= "Rates on #{@latest_rates['date']}:" %></h4>
    <ul class="list-group list-group-flush">
      <% @latest_rates['rates'].each do |currency, rate| %>
        <li class="list-group-item"><%= "#{currency}: #{rate}"%></li>
      <% end %>
    </ul>
  <% end %>
<% end %>