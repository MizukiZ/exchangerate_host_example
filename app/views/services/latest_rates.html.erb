<%= render layout: "layouts/service_card" do %>
  <%= form_with url: latest_rates_url, method: :get do |form| %>
    Base: <%= form.select :base, options_for_select(available_currencies, @base_value), {}, class: 'form-select' %>
    Currencies: <%= form.select :symbols, options_for_select(available_currencies, @symbols_value), {include_hidden: false}, multiple: true, class: 'multi-select form-select' %>
    Amount: <%= form.number_field :amount, value: @amount_value, class: 'form-control', step: 0.1, min: 1 %>
    <%= form.submit "Search", class: 'btn btn-primary mt-3' %>
  <% end %>

  <h4 class="mt-3">Results:</h4>
  <ul class="list-group list-group-flush">
    <% @latest_rates['rates'].each do |currency, rate| %>
      <li class="list-group-item"><%= "#{currency}: #{rate}"%></li>
    <% end %>
  </ul>
<% end %>